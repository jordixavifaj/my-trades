// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trade {
  id          String   @id @default(cuid())
  symbol      String
  status      TradeStatus @default(OPEN)
  openDate    DateTime
  closeDate   DateTime?
  openPrice   Float
  closePrice  Float?
  quantity    Int
  side        Side
  pnl         Float?
  commission  Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  fills       Fill[]
  
  @@map("trades")
}

model Fill {
  id          String   @id @default(cuid())
  tradeId     String
  symbol      String
  price       Float
  quantity    Int
  side        Side
  timestamp   DateTime
  commission  Float
  createdAt   DateTime @default(now())
  
  trade       Trade @relation(fields: [tradeId], references: [id], onDelete: Cascade)
  
  @@map("fills")
}

enum TradeStatus {
  OPEN
  CLOSED
}

enum Side {
  BUY
  SELL
}
