generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  name         String?
  email        String   @unique
  passwordHash      String?
  mustResetPassword Boolean  @default(false)
  role              String   @default("TRADER")
  isActive          Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  trades       Trade[]
  importBatches ImportBatch[]
  auditLogs    AuditLog[]
  communityMemberships CommunityMember[]
  mentorAssignments    MentorAssignment[] @relation("MentorUser")
  studentAssignments   MentorAssignment[] @relation("StudentUser")

  @@index([role])
  @@map("users")
}

model Community {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  members     CommunityMember[]

  @@map("communities")
}

model CommunityMember {
  id          String    @id @default(cuid())
  userId      String
  communityId String
  joinedAt    DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  community   Community @relation(fields: [communityId], references: [id], onDelete: Cascade)

  @@unique([userId, communityId])
  @@index([communityId])
  @@index([userId])
  @@map("community_members")
}

model MentorAssignment {
  id        String   @id @default(cuid())
  mentorId  String
  studentId String
  createdAt DateTime @default(now())
  mentor    User     @relation("MentorUser", fields: [mentorId], references: [id], onDelete: Cascade)
  student   User     @relation("StudentUser", fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([mentorId, studentId])
  @@index([mentorId])
  @@index([studentId])
  @@map("mentor_assignments")
}

model Strategy {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  trades      Trade[]

  @@map("strategies")
}

model Trade {
  id          String      @id @default(cuid())
  userId      String?
  strategyId  String?
  importBatchId String?
  symbol      String
  status      String @default("OPEN")
  openDate    DateTime
  closeDate   DateTime?
  openPrice   Float
  closePrice  Float?
  quantity    Int
  side        String
  pnl         Float?
  commission  Float
  setupName   String?
  setupSource String?
  notes       String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  fills       Fill[]
  importBatch ImportBatch? @relation(fields: [importBatchId], references: [id], onDelete: SetNull)
  user        User?       @relation(fields: [userId], references: [id], onDelete: SetNull)
  strategy    Strategy?   @relation(fields: [strategyId], references: [id], onDelete: SetNull)
  auditLogs   AuditLog[]

  @@index([symbol, openDate])
  @@index([status, closeDate])
  @@index([strategyId])
  @@index([importBatchId])
  @@map("trades")
}

model ImportBatch {
  id        String   @id @default(cuid())
  userId    String?
  fileName  String
  fileHash  String
  createdAt DateTime @default(now())
  trades    Trade[]
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@unique([userId, fileHash])
  @@index([createdAt])
  @@map("import_batches")
}

model Fill {
  id         String   @id @default(cuid())
  tradeId    String
  symbol     String
  price      Float
  quantity   Int
  side       String
  timestamp  DateTime
  commission Float
  createdAt  DateTime @default(now())
  trade      Trade    @relation(fields: [tradeId], references: [id], onDelete: Cascade)

  @@index([symbol, timestamp])
  @@map("fills")
}

model AuditLog {
  id          String   @id @default(cuid())
  userId       String?
  tradeId      String?
  action       String
  reason       String?
  oldValueJson String?
  newValueJson String?
  createdAt    DateTime @default(now())
  user         User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  trade        Trade?   @relation(fields: [tradeId], references: [id], onDelete: SetNull)

  @@index([tradeId, createdAt])
  @@map("audit_logs")
}

